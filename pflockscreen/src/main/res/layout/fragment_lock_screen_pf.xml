<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_pf"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        style="?pf_lock_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/PFLockScreenStyle" />

    <TextView
        android:id="@+id/title_text_view"
        style="?pf_title"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/lock_screen_title_pf"
        android:theme="@style/PFLockScreenTitleTextStyle"
        app:layout_constraintBottom_toTopOf="@+id/code_view" />

    <com.beautycoder.pflockscreen.views.PFCodeView
        android:id="@+id/code_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/password_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/password_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_1"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:text="3" />

        <Button
            android:id="@+id/button_4"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4" />

        <Button
            android:id="@+id/button_5"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:theme="@style/PFLockScreenButtonStyle" />

        <Button
            android:id="@+id/button_6"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6" />

        <Button
            android:id="@+id/button_7"

            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7" />

        <Button
            android:id="@+id/button_8"

            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9" />

        <ImageView
            android:id="@+id/button_delete"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/side_button_background_pf"
            android:text="delete" />

        <Button
            android:id="@+id/button_0"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0" />

        <Button
            android:id="@+id/button_next"
            style="@style/PasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="n"
            android:visibility="visible" />
        <!--        <ImageView-->
        <!--            android:id="@+id/button_finger_print"-->
        <!--            style="?pf_fingerprint_button"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:background="@drawable/side_button_background_pf"-->
        <!--            android:gravity="center"-->
        <!--            android:text="fp"-->
        <!--            android:theme="@style/PFLockScreenFingerPrintButtonStyle" />-->

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
