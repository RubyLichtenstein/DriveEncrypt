<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PFLockScreenStyle">
        <item name="android:background">@drawable/background_pf</item>
    </style>

    <style name="PFLockScreenButtonStyle" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <!--        <item name="android:background">@drawable/touch_selector_pf</item>-->
    </style>

    <style name="PFLockScreenFingerPrintButtonStyle">
        <item name="android:padding">20dp</item>
    </style>

    <style name="PFLockScreenDeleteButtonStyle">
        <item name="android:padding">20dp</item>
    </style>


    <style name="PFCheckBox">
        <item name="android:checkboxStyle">@style/PFLockScreenCodeStyle</item>
        <item name="checkboxStyle">@style/PFLockScreenCodeStyle</item>
    </style>

    <style name="PFLockScreenCodeStyle">
        <item name="android:button">@drawable/code_selector_pf</item>
    </style>

    <style name="PFLockScreenNextTextStyle">
        <item name="android:textColor">#9FFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:backgroundTint">#c66</item>
    </style>

    <style name="PFLockScreenHintTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PFLockScreenTitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PasswordButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="PasswordImage" parent="PasswordButton">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PasswordText" parent="PasswordButton">
        <item name="android:textSize">36sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
